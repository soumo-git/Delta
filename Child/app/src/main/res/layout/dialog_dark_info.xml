<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/permissions_dialog_background"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/permissions_card_bg"
        android:padding="16dp">

        <ImageView
            android:id="@+id/dialog_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="14dp"
            android:src="@android:drawable/ic_dialog_info"
            android:contentDescription="@string/permissions_header_icon"
            app:tint="@color/permissions_icon_tint" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/permissions_text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Title" />

            <TextView
                android:id="@+id/dialog_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="@color/permissions_text_secondary"
                android:textSize="14sp"
                android:text="Message" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
